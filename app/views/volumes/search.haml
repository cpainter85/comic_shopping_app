.container
  .page-header
    #h1 Search Results


  .well
    .row
      -@results.each do |volume|
        .col-md-4.index_element
          -if volume.searchable_type == 'Volume'
            %p.text-center.thumb=link_to(image_tag(volume.searchable.thumbnail_url ? volume.searchable.thumbnail_url : 'no_image_available_thumb.jpg', class: 'img-thumbnail'), publisher_volume_path(volume.searchable.publisher_id, volume.searchable.id))
            %p.text-center=link_to("#{volume.searchable.name} (#{volume.searchable.start_year})", publisher_volume_path(volume.searchable.publisher_id, volume.searchable.id))
